<menu id='forum_topic_links'>
  <% unless @topic.try(:new_record?) %>
    <% if can? :create_topic, @forum %>
      <%= link_to t('forem.topic.links.new'), new_forum_topic_path(forum) %>
    <% end %>
  <% end %>
  <% if @topic %>
    <%= link_to t('forem.topic.links.back_to_topics'), forum_path(forum) %>
  <% end %>
