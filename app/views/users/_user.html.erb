<% if record.has_photo? %>
  <td class="list_image">
    <%= link_to (image_tag record.photo.url(:thumb), :class => 'list_image', :alt => record.has_caption? ? record.photo_caption : record.display_name), record %>
  </td>
<% else %>
  <td></td>
<% end %>
<td class="list_description">
  <dl>
    <dt><%= link_to record.display_name, record %></dt>
    <% if !record.description.blank? %>
      <dd>Description: <%= truncate(strip_tags(record.description), :length => 200) %></dd>
    <% end %>
    <dd>
      Currently Resides in: <%= record.city %>, <%= record.province %> <%= record.country %>
    </dd>
  </dl>
</td>
